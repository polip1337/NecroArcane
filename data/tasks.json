	  {
		"id": "t_evening_prayers",
		"name": "Evening Prayers at the Shrine",
		"desc": "Join your family at the small stone shrine at the edge of the village. Offer a portion of your earnings to the gods of hearth, harvest, and health.",
		"extdesc": "The coins clink softly in the offering bowl. Father prays for a good harvest, mother for the village's health, your brothers for strength. You pray for... understanding.",
		"verb": "praying",
		"actname": "Offer to Gods",
		"group": "Town",
		"tags": "t_prayer,t_family",
		"require": "g.gold>=2&&g.family_bonds>=20",
		"cost": {
		  "gold": 2
		},
		"result": {
		  "faith": 3,
		  "village_reputation": 1,
		  "family_bonds": 1
		},
		"log": {
		  "name": "Shared Devotion",
		  "desc": "The shrine stone was warm from the day's sun. For a moment, holding your family's hands, you felt a flicker of something greater."
		}
	  },
	  
	  {
		"id": "t_study_scrolls",
